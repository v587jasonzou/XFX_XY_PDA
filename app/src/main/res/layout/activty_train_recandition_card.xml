<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_tp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar_bg"
        app:title="填写信息"
        app:navigationIcon="@mipmap/back_arrow_white"
        app:titleTextColor="@color/white"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.ActionBar">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tvWorkNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_dimen_size15"
            android:background="@mipmap/circle_bule_light"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvNodeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dimen_size18"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_line_white_bg"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvCardNum"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_dimen_size24"
            android:textColor="@color/textviewBg"
            android:background="@drawable/number_bg"/>
        <TextView
            android:id="@+id/EquipName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dimen_size15"
            android:textColor="@color/textviewBg"
            android:text=""
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <jx.yunda.com.terminal.widget.SwitchView
        android:id="@+id/switchView"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llUpLoadImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_dimen_size21"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传图片:"
                        android:textSize="@dimen/text_dimen_size17"
                        />
                </LinearLayout>

                <jx.yunda.com.terminal.widget.SodukuGridView
                    android:id="@+id/gvImages"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:numColumns="3"/>
            </LinearLayout>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llEmpty"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/empty_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有数据了，点击刷新"/>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/btNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:background="@drawable/button_selector"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dimen_size21"
            android:layout_marginRight="20dp" />
        <Button
            android:id="@+id/btJianDin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鉴定"
            android:background="@drawable/button_selector"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/text_dimen_size21" />
        <Button
            android:id="@+id/btPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放弃"
            android:background="@drawable/button_selector"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:textSize="@dimen/text_dimen_size21" />
        <Button
            android:id="@+id/btAddTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提票"
            android:background="@drawable/button_selector"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dimen_size21"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>

</LinearLayout>