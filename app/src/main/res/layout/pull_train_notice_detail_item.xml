<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pull_train_notice_detail_item_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:text="台位一 至 台位二"
            android:textSize="@dimen/text_dimen_size18" />

        <TextView
            android:id="@+id/pull_train_notice_detail_item_affirm_time"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2018-10-15 18:55"
            android:textSize="@dimen/text_dimen_size18"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/pull_train_notice_detail_item_affirm_person"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textSize="@dimen/text_dimen_size18"
            android:text="张麻子"
            android:visibility="gone" />
        <Button
            android:id="@+id/pull_train_notice_detail_item_del"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/submit_bg"
            android:gravity="center"
            android:text="删除"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>