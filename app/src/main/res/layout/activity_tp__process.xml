<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".modules.tpprocess.TP_ProcessActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_tp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar_bg"
        app:title="过程提票"
        app:navigationIcon="@mipmap/back_arrow_white"
        app:titleTextColor="@color/white"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.ActionBar">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="提票记录"-->
            <!--android:textColor="#ffffff"-->
            <!--android:gravity="right"/>-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="提票记录"-->
        <!--android:textColor="#ffffff"-->
        <!--android:paddingLeft="10dp" />-->
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/lvType"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/slideBg"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tvMesaageNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/messge_button_bg"
                android:text="5条保存的提票 > >"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="车型、车号"
                android:padding="10dp"
                android:background="@drawable/editext_bg"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/search_black"
                android:drawablePadding="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在修机车"
                android:textSize="@dimen/text_dimen_size19"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/sv_ticketTrain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/gvCar"
                    android:numColumns="2"
                    android:gravity="center"
                    android:background="@color/base_bg"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <Button
                android:id="@+id/btNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    提票  ＞ "
                android:background="@drawable/button_selector_gray"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_dimen_size21"
                android:enabled="false"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>