<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/receive_train_notice_item_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="SS6B 0001" />

            <TextView
                android:id="@+id/receive_train_notice_item_repair"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="辅修"
                android:layout_marginLeft="10dp"
                android:visibility="visible"/>
        </LinearLayout>


        <TextView
            android:id="@+id/receive_train_notice_item_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2018-08-10"
            android:visibility="gone"/>
        <Button
            android:id="@+id/receive_train_notice_item_submit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/submit_bg"
            android:gravity="center"
            android:text="接车"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>