<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/special_approval_item_train"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="HXD1D 0001" />

        <TextView
            android:id="@+id/special_approval_item_repair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="辅修" />

        <TextView
            android:id="@+id/special_approval_item_time"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2018-08-10" />

        <Button
            android:id="@+id/special_approval_item_submit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/submit_bg"
            android:gravity="center"
            android:text="审批"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>