<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_tp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar_bg"
        app:title="复检提票"
        app:navigationIcon="@mipmap/back_arrow_white"
        app:titleTextColor="@color/white"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.ActionBar"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/bar_bg"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/bar_bg"
        >
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未处理      " />
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已处理" />
    </android.support.design.widget.TabLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tvMesaageNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/messge_button_bg"
            android:text="5条保存的提票 > >"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="车型、车号"
            android:padding="10dp"
            android:background="@drawable/editext_bg"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/search_black"
            android:drawablePadding="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在修机车"
            android:textSize="@dimen/text_dimen_size19"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/sv_ticketTrain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gvCar"
                android:numColumns="2"
                android:gravity="center"
                android:background="@color/base_bg"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提票  ＞"
                android:background="@drawable/button_selector_gray"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_size21"
                android:padding="10dp"
                android:enabled="false"
                 />
            <Button
                android:id="@+id/btSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
                android:background="@drawable/button_selector_gray"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_size21"
                android:padding="10dp"
                android:enabled="false"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>