<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_group_frame"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_group_type"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:background="@color/msg_group_type"
            android:gravity="center"
            android:text="整"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dimen_size35" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_group_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="HXD1C0050C42018-0817-管asdadsasdadsasdads管asdadsasdadsasdads管asdadsasdadsasdads"
                android:textSize="@dimen/text_dimen_size18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_last_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="车已经进站，请准备好aaaaaaaaaaaa请准备好aaaaaaaaaaaa请准备好aaaaaaaaaaaa请准备好aaaaaaaaaaaa"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_dimen_size14" />

                <TextView
                    android:id="@+id/message_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="2018-03-04 14:20"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_dimen_size12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/message_count"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/circle_red_bg"
        android:gravity="center"
        android:text="123"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="visible" />
</FrameLayout>